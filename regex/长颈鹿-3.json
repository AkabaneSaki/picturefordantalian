    "replaceString": "<div class=\"opera-card\"><label class=\"replay-switch\" title=\"点击重置 -> 再次点击播放\"><input type=\"checkbox\" class=\"replay-trigger\"><div class=\"switch-icon\">↻</div></label><div class=\"chain c1\"></div><div class=\"chain c2\"></div><div class=\"side-pennant\"></div><div class=\"left-rune\"></div><div class=\"top-drape\"></div><div class=\"magic-ring\"></div><div class=\"ornate-divider\"></div><div class=\"deco-gear gear-tl\"></div><div class=\"deco-gear gear-br\"></div><div class=\"seal-strip seal-top\"></div><div class=\"seal-strip seal-btm\"></div><div class=\"abyss-fog\"></div><div class=\"bg-halo\"></div><div class=\"spotlight s-left\"></div><div class=\"spotlight s-right\"></div><div class=\"dust-container\"><div class=\"dust d1\"></div><div class=\"dust d2\"></div><div class=\"dust d3\"></div><div class=\"dust d4\"></div><div class=\"dust d5\"></div></div><div class=\"opera-pattern\"></div><div class=\"opera-vignette\"></div><div class=\"op-line act-1\"><span class=\"ornament\">❧</span> TARGET: <span class=\"target-name\">$1</span></div><div class=\"op-line act-2\">$2</div><div class=\"op-line act-3\"><div class=\"role-label\">Starring</div><div class=\"actor-name\">$3</div></div><div class=\"op-line act-4\"><span class=\"chant-text\">$4</span></div><div class=\"op-line act-5\"><div class=\"glitch-text\" data-text=\"$5\">$5</div></div><div class=\"corner c-tl\"></div><div class=\"corner c-tr\"></div><div class=\"corner c-bl\"></div><div class=\"corner c-br\"></div></div><style>.opera-card{position:relative;width:100%;padding:50px 20px 40px;box-sizing:border-box;background:radial-gradient(circle at center,#1a0000 0%,#000000 100%);border:3px double #FFD700;font-family:'Times New Roman',serif;overflow:hidden;margin:20px 0;box-shadow:0 0 30px rgba(255,215,0,0.2),inset 0 0 80px rgba(139,0,0,0.4);color:#e0e0e0}.replay-switch{position:absolute;bottom:15px;right:15px;width:30px;height:30px;z-index:500;cursor:pointer;display:flex;justify-content:center;align-items:center;border:1px solid #FFD700;border-radius:50%;background:rgba(0,0,0,0.6);transition:0.3s}.replay-switch input{display:none}.switch-icon{font-size:20px;color:#FFD700;line-height:1;transition:0.5s;user-select:none}.replay-switch:hover{background:#FFD700;box-shadow:0 0 10px #FFD700}.replay-switch:hover .switch-icon{color:#000;transform:rotate(180deg)}.opera-card:has(.replay-trigger:checked) *{animation:none!important;opacity:0!important;transition:none!important}.opera-card:has(.replay-trigger:checked){background:#000!important;box-shadow:none!important;border-color:#333!important}.opera-card:has(.replay-trigger:checked) .replay-switch,.opera-card:has(.replay-trigger:checked) .switch-icon{opacity:1!important;color:#555!important;border-color:#555!important;background:transparent!important}.op-line{position:relative;z-index:200;opacity:0;margin-bottom:12px}.act-1{font-family:'Courier New',monospace;font-size:0.85em;color:#ff6b6b;font-weight:bold;border-bottom:1px solid rgba(255,107,107,0.5);padding-bottom:5px;width:fit-content;margin-left:60px;letter-spacing:1px;text-shadow:0 0 5px rgba(0,0,0,0.8);animation:fade-slide-right 1s ease-out forwards}.act-1 .target-name{color:#fff;text-transform:uppercase;text-shadow:0 0 10px #ff0000}.act-2{text-align:right;font-size:1.1em;color:#eee;font-style:italic;font-family:'Georgia',serif;text-shadow:0 2px 4px #000;white-space:pre-line;animation:fade-slide-left 1s ease-out 1s forwards}.act-3{text-align:center;margin-top:25px;animation:scale-reveal 1.5s cubic-bezier(0.22,1,0.36,1) 2s forwards}.role-label{font-size:0.65em;color:#888;letter-spacing:5px;text-transform:uppercase;display:block;margin-bottom:8px}.actor-name{font-size:1.8em;font-weight:900;letter-spacing:2px;line-height:1.4;background:linear-gradient(to bottom,#fff 0%,#FFD700 50%,#B8860B 100%);-webkit-background-clip:text;color:transparent;filter:drop-shadow(0 0 10px rgba(255,215,0,0.5))}.act-4{text-align:center;margin-top:25px;margin-bottom:25px;animation:slow-breath 2s ease-in-out 3s forwards}.chant-text{font-size:1.1em;color:#fff;letter-spacing:6px;font-weight:300;text-shadow:0 0 10px #fff,0 0 20px #FFD700;opacity:0.9}.act-5{text-align:center;animation:heavy-smash 0.4s cubic-bezier(0.11,0,0.5,0) 4.5s forwards}.glitch-text{font-family:'Impact','Arial Black',sans-serif;font-weight:900;font-size:3.2em;line-height:1;color:#fff;text-transform:uppercase;position:relative;letter-spacing:2px;text-shadow:4px 4px 0px #8B0000;display:inline-block}.glitch-text::before{content:attr(data-text);position:absolute;left:0;top:0;width:100%;height:100%;color:transparent;text-shadow:-3px 0 #FFD700;opacity:0.8;clip-path:inset(0 0 50% 0);z-index:-1;animation:glitch-anim 2.5s infinite linear alternate-reverse}.chain{position:absolute;top:-10px;width:6px;background:repeating-linear-gradient(to bottom,#FFD700,#B8860B 6px,transparent 6px,transparent 8px);z-index:50;filter:drop-shadow(2px 2px 2px rgba(0,0,0,0.8));transform-origin:top center}.c1{left:15px;height:180px;animation:chain-sway 4s ease-in-out infinite alternate}.c2{left:35px;height:120px;animation:chain-sway 5s ease-in-out infinite alternate-reverse}.side-pennant{position:absolute;top:0;left:60px;width:40px;height:140px;background:linear-gradient(to bottom,#8B0000,#300);border:1px solid #FFD700;border-top:none;z-index:40;clip-path:polygon(0 0,100% 0,100% 85%,50% 100%,0 85%);box-shadow:0 0 10px rgba(0,0,0,0.5);opacity:0.9}.side-pennant::after{content:'†';position:absolute;bottom:30px;left:50%;transform:translateX(-50%);color:#FFD700;font-size:24px;text-shadow:0 0 5px #ffcc00}.left-rune{position:absolute;top:60%;left:10%;width:150px;height:150px;border:2px dashed rgba(255,215,0,0.15);border-radius:50%;z-index:10;pointer-events:none;transform:translate(-50%,-50%);animation:gear-spin-ccw 50s linear infinite}.left-rune::before{content:'';position:absolute;top:10%;left:10%;width:80%;height:80%;border:1px solid rgba(255,215,0,0.1);transform:rotate(45deg)}.top-drape{position:absolute;top:-10px;left:0;width:100%;height:60px;background:repeating-linear-gradient(90deg,#8B0000,#a00000 10px,#500000 20px);border-bottom:4px solid #FFD700;border-radius:0 0 50% 50% / 0 0 20px 20px;box-shadow:0 5px 15px rgba(0,0,0,0.8);z-index:60;pointer-events:none}.top-drape::after{content:'✦';position:absolute;bottom:-12px;left:50%;transform:translateX(-50%);color:#FFD700;font-size:20px;text-shadow:0 0 5px #ff8800}.magic-ring{position:absolute;top:50%;left:50%;width:280px;height:280px;border:1px dashed rgba(255,215,0,0.3);border-radius:50%;transform:translate(-50%,-50%);z-index:20;pointer-events:none;animation:gear-rotate 40s linear infinite reverse}.ornate-divider{position:absolute;top:58%;left:50%;transform:translateX(-50%);width:60%;height:2px;background:linear-gradient(90deg,transparent,#FFD700,transparent);z-index:20;opacity:0;animation:fade-in 1s ease-out 2.5s forwards}.ornate-divider::after{content:'❖';position:absolute;top:-10px;left:50%;transform:translateX(-50%);color:#FFD700;font-size:16px}.deco-gear{position:absolute;width:90px;height:90px;background:radial-gradient(transparent 35%,#FFD700 36%,#B8860B 100%);border:4px dashed #FFD700;border-radius:50%;opacity:0.9;z-index:30;pointer-events:none;box-shadow:0 0 20px rgba(255,215,0,0.4)}.gear-tl{top:-35px;left:-35px;animation:gear-spin-cw 20s linear infinite}.gear-br{bottom:-35px;right:-35px;width:130px;height:130px;border-width:6px;animation:gear-spin-ccw 25s linear infinite}.seal-strip{position:absolute;left:0;width:100%;height:2px;background:linear-gradient(90deg,transparent,#ff0000 20%,#fff 50%,#ff0000 80%,transparent);box-shadow:0 0 10px #ff0000;z-index:30;opacity:0}.seal-top{top:28%;animation:seal-expand 3s cubic-bezier(0.19,1,0.22,1) 0.5s forwards}.seal-btm{bottom:28%;animation:seal-expand 3s cubic-bezier(0.19,1,0.22,1) 0.8s forwards}.bg-halo{position:absolute;top:50%;left:50%;width:140%;height:140%;transform:translate(-50%,-50%);background:repeating-conic-gradient(from 0deg,transparent 0deg 5deg,rgba(255,215,0,0.15) 5deg 10deg);z-index:0;pointer-events:none;animation:gear-rotate 80s linear infinite;mask-image:radial-gradient(circle,black 20%,transparent 70%);-webkit-mask-image:radial-gradient(circle,black 20%,transparent 70%)}.abyss-fog{position:absolute;bottom:0;left:0;width:100%;height:50%;background:linear-gradient(to top,rgba(138,43,226,0.5),transparent);z-index:10;mix-blend-mode:screen;pointer-events:none;animation:fog-pulse 4s ease-in-out infinite alternate}.spotlight{position:absolute;top:-50%;width:50%;height:200%;background:linear-gradient(to bottom,rgba(255,255,255,0.15),transparent);z-index:15;pointer-events:none;transform-origin:top center;filter:blur(8px)}.s-left{left:20%;animation:spot-sweep 8s ease-in-out infinite alternate}.s-right{right:20%;animation:spot-sweep 10s ease-in-out infinite alternate-reverse}.dust-container{position:absolute;top:0;left:0;width:100%;height:100%;z-index:20;pointer-events:none}.dust{position:absolute;bottom:-10px;width:3px;height:3px;background:#fff;border-radius:50%;box-shadow:0 0 5px #FFD700;opacity:0}.d1{left:10%;animation:dust-float 6s linear infinite}.d2{left:30%;animation:dust-float 8s linear infinite 1s}.d3{left:50%;animation:dust-float 5s linear infinite 2s}.d4{left:70%;animation:dust-float 7s linear infinite 0.5s}.d5{left:90%;animation:dust-float 9s linear infinite 3s}.opera-pattern{position:absolute;top:0;left:0;width:100%;height:100%;background-image:radial-gradient(#600 15%,transparent 16%),radial-gradient(#600 15%,transparent 16%);background-size:20px 20px;background-position:0 0,10px 10px;opacity:0.2;z-index:0;pointer-events:none}.opera-vignette{position:absolute;top:0;left:0;width:100%;height:100%;background:radial-gradient(transparent 30%,#000 100%);z-index:5;pointer-events:none}.corner{position:absolute;width:25px;height:25px;border:2px solid #FFD700;z-index:80;box-shadow:0 0 5px #FFD700}.c-tl{top:6px;left:6px;border-right:none;border-bottom:none}.c-tr{top:6px;right:6px;border-left:none;border-bottom:none}.c-bl{bottom:6px;left:6px;border-right:none;border-top:none}.c-br{bottom:6px;right:6px;border-left:none;border-top:none}@keyframes chain-sway{0%{transform:rotate(-2deg)}100%{transform:rotate(2deg)}}@keyframes gear-spin-cw{from{transform:rotate(0deg)}to{transform:rotate(360deg)}}@keyframes gear-spin-ccw{from{transform:rotate(0deg)}to{transform:rotate(-360deg)}}@keyframes gear-rotate{from{transform:translate(-50%,-50%) rotate(0deg)}to{transform:translate(-50%,-50%) rotate(360deg)}}@keyframes seal-expand{0%{width:0%;left:50%;opacity:0}100%{width:100%;left:0;opacity:0.9}}@keyframes fog-pulse{0%{opacity:0.5;height:40%}100%{opacity:0.8;height:55%}}@keyframes fade-in{from{opacity:0}to{opacity:1}}@keyframes spot-sweep{0%{transform:rotate(-15deg);opacity:0.3}100%{transform:rotate(15deg);opacity:0.7}}@keyframes dust-float{0%{opacity:0;transform:translateY(0)}20%{opacity:1}100%{opacity:0;transform:translateY(-100px)}}@keyframes fade-slide-right{from{opacity:0;transform:translateX(-20px)}to{opacity:1;transform:translateX(0)}}@keyframes fade-slide-left{from{opacity:0;transform:translateX(20px)}to{opacity:1;transform:translateX(0)}}@keyframes scale-reveal{from{opacity:0;transform:scale(0.8)}to{opacity:1;transform:scale(1)}}@keyframes slow-breath{0%{opacity:0;letter-spacing:0px;filter:blur(5px)}50%{opacity:1;letter-spacing:5px;filter:blur(0)}100%{opacity:0.6;letter-spacing:6px}}@keyframes heavy-smash{0%{opacity:0;transform:scale(4);filter:blur(10px)}100%{opacity:1;transform:scale(1);filter:blur(0)}}@keyframes glitch-anim{0%{transform:translate(0)}20%{transform:translate(-2px,2px)}40%{transform:translate(-2px,-2px)}60%{transform:translate(2px,2px)}80%{transform:translate(2px,-2px)}100%{transform:translate(0)}}</style>",
