;margin:0;line-height:1.2;white-space:nowrap;animation:title-fall-fade 3s cubic-bezier(0.22,1,0.36,1) forwards,neon-flicker 4s infinite alternate 3s;text-shadow:0 0 10px rgba(255,255,255,0.8);opacity:0}.declaration-box{position:relative;z-index:5;width:100%;box-sizing:border-box;padding:10px 20px 20px;display:flex;flex-direction:column;min-height:220px;justify-content:space-between}.st-line{font-weight:bold;line-height:1.6}rt{font-size:0.5em;opacity:0.7;font-weight:normal}.left-pos{align-self:flex-start;text-align:left;font-size:1.2em;color:#a8d8ea;width:80%}.center-pos{align-self:center;text-align:center;font-size:1.4em;color:#dbeaff;text-shadow:0 0 5px #48a;margin:10px 0}.right-pos{align-self:flex-end;text-align:right;font-size:1.6em;color:#fff;width:80%}.bottom-pos{align-self:center;text-align:center;font-size:1.8em;color:#fff;font-weight:bold;margin-top:15px}@keyframes spin{100%{transform:rotate(360deg)}}@keyframes neon-flicker{0%,19%,21%,23%,25%,54%,56%,100%{opacity:1;text-shadow:0 0 10px #fff,0 0 20px #fff,0 0 40px #fff,0 0 80px var(--primary)}20%,24%,55%{opacity:0.5;text-shadow:none}}@keyframes title-fall-fade{0%{transform:translateY(-150px) scale(3);opacity:0;filter:blur(10px)}60%{transform:translateY(0) scale(1);opacity:0.8;filter:blur(0)}100%{transform:scale(1);opacity:1}}@keyframes l{from{opacity:0;transform:translateX(-30px)}to{opacity:1;transform:translateX(0)}}@keyframes u{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}@keyframes r{from{opacity:0;transform:translateX(30px)}to{opacity:1;transform:translateX(0)}}@keyframes b{0%{opacity:0;transform:scale(5);filter:blur(10px);text-shadow:0 0 50px red}70%{transform:scale(.9);text-shadow:0 0 10px red}100%{opacity:1;transform:scale(1);filter:blur(0)}}@keyframes s{0%,100%{text-shadow:0 0 10px #f00,0 0 20px #8b0000;transform:scale(1);color:#fff}50%{text-shadow:0 0 25px #f44,0 0 40px #fa0,0 0 5px #fff;transform:scale(1.02);color:#fff8e7}}@keyframes flow-left{from{background-position:0 0}to{background-position:-300px 0}}@keyframes flow-right{from{background-position:0 0}to{background-position:300px 0}}@keyframes particle-rise{0%{transform:translateY(0)}100%{transform:translateY(-200px)}}.anim-l{animation:l 2s ease-out 1.5s forwards;opacity:0}.anim-u{animation:u 2s ease-out 2.5s forwards;opacity:0}.anim-r{animation:r 3s ease-out 3.5s forwards;opacity:0}.anim-b-s{opacity:0;animation:b .8s cubic-bezier(.17,.88,.32,1.27) 4.5s forwards,s 2.5s ease-in-out 5.3s infinite}.replay-switch{position:absolute;bottom:10px;right:10px;width:30px;height:30px;z-index:100;cursor:pointer;opacity:0.4;background:rgba(0,0,0,0.5);border:1px solid var(--gold);border-radius:50%;display:flex;align-items:center;justify-content:center;transition:0.3s}.replay-switch input{display:none}.replay-switch:hover{opacity:1;transform:scale(1.1);background:var(--primary)}.replay-switch span{font-size:18px;color:var(--gold);line-height:1;user-select:none}.revue-card:has(.replay-trigger:checked) *{animation:none!important;opacity:0!important;transition:none!important}.revue-card:has(.replay-trigger:checked){background:#000!important;box-shadow:none!important;border-color:rgba(255,215,0,0.2)!important}.revue-card:has(.replay-trigger:checked) .replay-switch,.revue-card:has(.replay-trigger:checked) .replay-switch span{opacity:1!important;transform:none!important;color:#fff}\n/* === 独立对角线警戒条 (3秒 + 自然消失) === */\n.yellow-strip{position:absolute;top:50%;left:50%;width:300%;height:35px;background:repeating-linear-gradient(90deg,#000,#000 15px,#FFD700 15px,#FFD700 30px);z-index:2;box-shadow:0 0 15px #000;border:1px solid #fff;pointer-events:none}\n\n/* 条目1：右下 -> 左上 (\\型) */\n/* 3s移动，最后完全移出并消失 */\n.ys-br-tl{animation:move-br-tl 3s linear forwards}\n@keyframes move-br-tl{\n  0%{transform:translate(-50%,-50%) rotate(35deg) translateX(80%); opacity: 1}\n  95%{opacity: 1}\n  100%{transform:translate(-50%,-50%) rotate(35deg) translateX(-80%); opacity: 0}\n}\n\n/* 条目2：右上 -> 左下 (/型) */\n/* 3s移动，最后完全移