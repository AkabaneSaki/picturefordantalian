    "scriptName": "命定核心-对话美化",
    "findRegex": "/<giraffe name=\"(.*?)\">\\s*[「]?\\s*([\\s\\S]*?)\\s*[」]?\\s*<\\/giraffe>/g",
    "replaceString": "<div class=\"revue-ultimate-mech\"><div class=\"velvet-strip\"></div><div class=\"ruler-border\"></div><div class=\"bg-texture\"></div><div class=\"energy-pulse\"></div><div class=\"global-sheen\"></div><div class=\"chronometer-complex\"><!-- 表盘底层 --><div class=\"dial-base\"></div><!-- 蒸汽喷口 --><div class=\"steam-vent left-vent\"></div><div class=\"steam-vent right-vent\"></div><div class=\"steam-vent center-vent\"></div><!-- 触发式机关 --><div class=\"event-point point-6\"></div><div class=\"event-point point-9\"></div><!-- 齿轮组 --><div class=\"gear-outer-ring\"></div><div class=\"gear-main-stack\"><div class=\"gear-g1\"></div><div class=\"gear-g2\"></div></div><!-- 指针系统 --><div class=\"hand-hour-c\"></div><div class=\"hand-min-c\"></div><div class=\"center-cap\"></div><!-- 表盘玻璃反光 --><div class=\"glass-glint-anim\"></div></div><div class=\"compact-header\"><div class=\"name-wrapper\"><div class=\"status-led\"></div><span class=\"gradient-name\">$1</span></div><div class=\"header-line\"></div></div><div class=\"compact-body\">$2</div></div><style>.revue-ultimate-mech{--gold:#d4af37;--gold-dim:#8a6d3b;--bg-dark:linear-gradient(135deg,#181818 0%,#0a0a0a 100%);position:relative;margin:6px 0;padding:10px 15px 10px 25px;background:var(--bg-dark);border-radius:0 4px 4px 0;overflow:hidden;font-family:'Times New Roman','SimSun',serif;box-shadow:inset 0 0 30px rgba(0,0,0,0.9), 0 5px 15px rgba(0,0,0,0.5);transition:all 0.4s ease;animation:system-pulse 12s ease-in-out infinite paused}.velvet-strip{position:absolute;top:0;left:0;width:5px;height:100%;background:repeating-linear-gradient(180deg,#7a0012,#900 10px,#c00 15px,#7a0012 20px);box-shadow:2px 0 5px rgba(0,0,0,0.5);z-index:4}.ruler-border{position:absolute;top:0;right:0;width:4px;height:100%;background-image:linear-gradient(to bottom,var(--gold-dim) 50%,transparent 50%);background-size:2px 4px;opacity:0.3;z-index:3;transition:opacity 0.3s}.bg-texture{position:absolute;top:0;left:0;width:100%;height:100%;background-image:linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);background-size:20px 20px;z-index:0;pointer-events:none}.energy-pulse{position:absolute;top:0;left:0;width:100%;height:100%;background:linear-gradient(90deg,transparent,rgba(255,215,0,0.1),transparent);transform:translateX(-100%);z-index:1;pointer-events:none;animation:energy-flow 12s linear infinite paused}.global-sheen{position:absolute;top:0;left:0;width:200%;height:100%;/* 模拟车窗反光：宽光带 + 窄光带 */background:linear-gradient(120deg,transparent 30%,rgba(255,255,255,0.02) 35%,rgba(255,255,255,0.05) 40%,rgba(255,255,255,0.02) 45%,transparent 50%,rgba(255,255,255,0.08) 52%,rgba(255,255,255,0.01) 54%,transparent 60%);transform:translateX(-100%);z-index:10;pointer-events:none;animation:train-light 8s ease-in-out infinite paused}.chronometer-complex{position:absolute;top:-25px;right:-25px;width:100px;height:100px;border-radius:50%;background:#050505;border:2px solid var(--gold);box-shadow:inset 0 0 20px #000,0 5px 15px rgba(0,0,0,0.6);z-index:2;overflow:visible}.dial-base{position:absolute;top:0;left:0;width:100%;height:100%;background:radial-gradient(circle,transparent 50%,rgba(212,175,55,0.1) 51%,transparent 52%),repeating-conic-gradient(from 0deg,transparent 0deg 29deg,rgba(212,175,55,0.3) 29.5deg 30deg);border-radius:50%;overflow:hidden}.gear-outer-ring{position:absolute;top:-10%;left:-10%;width:120%;height:120%;border:4px dotted var(--gold-dim);border-radius:50%;opacity:0.3;animation:spin-slow 60s linear infinite paused}.gear-main-stack{position:absolute;top:50%;left:50%;width:0;height:0}.gear-g1{position:absolute;top:-30px;left:-30px;width:60px;height:60px;background:conic-gradient(from 0deg,#b8860b 0 10deg,transparent 10deg 20deg);border-radius:50%;mask:radial-gradient(transparent 40%,#000 41%);-webkit-mask:radial-gradient(transparent 40%,#000 41%);background-size:20px 20px;animation:spin-right 12s linear infinite paused;opacity:0.6}.gear-g2{position:absolute;top:-20px;left:-20px;width:40px;height:40px;border:2px dashed #d4af37;border-radius:50%;animation:spin-left 6s linear infinite paused}.hand-hour-c{position:absolute;top:50%;left:50%;width:4px;height:25px;background:linear-gradient(to top,#fff,#d4af37);transform-origin:bottom center;transform:translate(-50%,-100%) rotate(135deg);border-radius:2px;z-index:5;box-shadow:2px 2px 4px rgba(0,0,0,0.8);animation:tick-tock 60s linear infinite paused}.hand-min-c{position:absolute;top:50%;left:50%;width:2px;height:40px;background:#fff;transform-origin:bottom center;transform:translate(-50%,-100%);z-index:6;box-shadow:1px 1px 3px rgba(0,0,0,0.8);animation:tick-tock 4s linear infinite paused}.center-cap{position:absolute;top:50%;left:50%;width:8px;height:8px;background:radial-gradient(circle at 30% 30%,#fff,#d4af37);border-radius:50%;transform:translate(-50%,-50%);z-index:7}.glass-glint-anim{position:absolute;top:0;left:0;width:100%;height:100%;background:linear-gradient(135deg,transparent 40%,rgba(255,255,255,0.6) 45%,rgba(255,255,255,0.9) 50%,rgba(255,255,255,0.6) 55%,transparent 60%);z-index:20;pointer-events:none;border-radius:50%;opacity:0.2;background-size:200% 200%;animation:glass-sheen 6s ease-in-out infinite paused}.steam-vent{position:absolute;bottom:0;width:20px;height:20px;background:radial-gradient(circle,rgba(200,200,210,0.8) 0%,rgba(100,100,110,0.4) 60%,transparent 80%);filter:blur(5px);opacity:0;border-radius:50%;z-index:0;animation:fog-blast 12s ease-out infinite paused}.left-vent{left:10px;transform-origin:bottom right}.right-vent{right:10px;transform-origin:bottom left;animation-delay:0.1s}.center-vent{left:40px;bottom:-10px;transform-origin:bottom center;animation-delay:0.2s;width:30px;height:30px}.revue-ultimate-mech:hover{background:linear-gradient(135deg,#252525 0%,#1a1510 100%);box-shadow:inset 0 0 60px rgba(255,215,0,0.15),0 0 15px rgba(255,215,0,0.3)}.revue-ultimate-mech:hover, .revue-ultimate-mech:hover * {animation-play-state:running}.revue-ultimate-mech:hover .ruler-border{opacity:1;background-image:linear-gradient(to bottom,var(--gold) 50%,transparent 50%)}.compact-header{display:flex;align-items:center;margin-bottom:4px;position:relative;z-index:3;padding-right:70px}.name-wrapper{display:flex;align-items:center}.status-led{width:6px;height:6px;border-radius:50%;background:#550000;box-shadow:0 0 2px #300;margin-right:8px;animation:led-breath 3s ease-in-out infinite paused}.revue-ultimate-mech:hover .status-led{background:#00ff00;box-shadow:0 0 8px #0f0;animation:none}.gradient-name{font-size:1.1em;font-weight:900;font-style:italic;letter-spacing:1px;text-transform:uppercase;background:linear-gradient(to bottom,#fff 0%,#ffd700 50%,#b8860b 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;filter:drop-shadow(0 1px 2px rgba(0,0,0,0.8))}.header-line{flex-grow:1;height:1px;background:linear-gradient(90deg,rgba(212,175,55,0.8),transparent);margin-left:10px}.compact-body{position:relative;z-index:3;color:#ffffff;font-size:1em;line-height:1.5;text-shadow:0 0 2px rgba(255,255,255,0.8),0 0 5px rgba(212,175,55,0.3);padding-right:50px;white-space:pre-line}@keyframes spin-right{100%{transform:rotate(360deg)}}@keyframes spin-left{100%{transform:rotate(-360deg)}}@keyframes spin-slow{100%{transform:rotate(360deg)}}@keyframes tick-tock{0%{transform:translate(-50%,-100%) rotate(0deg)}100%{transform:translate(-50%,-100%) rotate(360deg)}}@keyframes flash-6{0%,45%{opacity:0}50%,55%{opacity:1;transform:scale(1.5);box-shadow:0 0 10px #fff}60%,100%{opacity:0}}@keyframes flash-9{0%,70%{opacity:0}75%,80%{opacity:1;transform:scale(1.5);box-shadow:0 0 10px #fff}85%,100%{opacity:0}}@keyframes system-pulse{0%,90%{transform:scale(1);box-shadow:inset 0 0 30px rgba(0,0,0,0.9)}92%{transform:scale(1.01);box-shadow:inset 0 0 80px rgba(220,20,60,0.5),0 0 20px rgba(220,20,60,0.6)}94%{transform:scale(0.995)}96%{transform:scale(1.005)}100%{transform:scale(1)}}@keyframes energy-flow{0%{transform:translateX(-100%);opacity:0}100%{transform:translateX(100%);opacity:1}}@keyframes fog-blast{0%,90%{opacity:0;transform:scale(0) translateY(0)}92%{opacity:0.7;transform:scale(2) translateY(-20px) translateX(-5px);filter:blur(4px)}96%{opacity:0.4;transform:scale(5) translateY(-50px) translateX(-15px);filter:blur(10px)}100%{opacity:0;transform:scale(8) translateY(-80px) translateX(-30px)}}@keyframes glass-sheen{0%,30%{background-position:0% 0%;opacity:0}35%{opacity:0.4}40%{background-position:100% 100%;opacity:0}100%{background-position:100% 100%;opacity:0}}@keyframes led-breath{0%,100%{opacity:0.5}50%{opacity:1;box-shadow:0 0 5px #f00}}/* === 列车光影动画 === */@keyframes train-light{0%{transform:translateX(-100%) translateY(-20%)}40%{transform:translateX(100%) translateY(20%)}100%{transform:translateX(100%) translateY(20%)}}</style>",
